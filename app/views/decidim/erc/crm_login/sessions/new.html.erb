<% add_decidim_page_title(t("devise.sessions.new.sign_in")) %>

<main class="wrapper">
  <div class="row collapse">
    <div class="row collapse">
      <div class="columns large-8 large-centered text-center page-title">
        <h1 class="heading1"><%= t("devise.sessions.new.sign_in") %></h1>
        <% if current_organization.sign_in_enabled? %>
          <p> Loguejat amb el teu usuari d'ERC:</p>
          <p> <%#= t(".sign_up_disabled") %> </p>
        <% else %>
          <p>
            <%= t(".sign_in_disabled") %>
          </p>
        <% end %>
      </div>
    </div>
    
    <% if current_organization.sign_in_enabled? %>
      <div class="row">
        <div class="columns large-6 medium-centered">
          <div class="card">
            <div class="card__content">
             
              <%= decidim_form_for(@form, as: resource_name, url: decidim_erc_crm_login.crm_session_path, html: { class: "register-form new_user", id: "" }) do |f| %>
                <%= invisible_captcha %>
                <div class="">
                  <div class="field">
                    <%#= f.text_field :name, help_text: t(".username_help") %>
                    <%= f.text_field :document_number %>
                  </div>
                </div>

                <div class="field">
                  <%#= f.password_field :password, help_text: t(".password_help", minimun_characters: NOBSPW.configuration.min_password_length), autocomplete: "off" %>
                  <%= f.password_field :password, autocomplete: "off" %>
                </div>

            
                
                <div class="actions">
                  <%#= f.submit t("devise.sessions.new.sign_in"), class: "button expanded" %>
                  <%= f.submit t("devise.registrations.new.sign_up"), class: "button expanded" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</main>
